{
  "name": "antpitlab-next",
  "version": "1.0.0",
  "description": "AntPit Lab - Portfolio fotografico professionale con Next.js 15",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "sanity:dev": "sanity dev",
    "sanity:deploy": "sanity deploy",
    "sanity:manage": "sanity manage",
    "analyze": "./scripts/analyze-bundle.sh",
    "lighthouse": "./scripts/lighthouse-audit.sh",
    "perf:report": "./scripts/performance-report.sh",
    "perf:all": "npm run build && npm run analyze && npm run lighthouse"
  },
  "keywords": [
    "nextjs",
    "portfolio",
    "photography",
    "typescript",
    "tailwindcss"
  ],
  "author": "Antonio Pitocco",
  "license": "MIT",
  "dependencies": {
    "@portabletext/types": "^2.0.15",
    "@sanity/image-url": "^1.2.0",
    "@sanity/vision": "^4.10.3",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "next": "^15.5.6",
    "next-sanity": "^11.5.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "sanity": "^4.10.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.6",
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3"
  }
}
